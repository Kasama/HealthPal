<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/pills"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/dim_frame"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/action_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorActionBackground"
            android:paddingTop="75sp"
            android:paddingBottom="25sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".EditMedicineActivity"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/medicineName"
                    android:id="@+id/medicineNameLabel"
                    android:text="@string/name"
                    android:contentDescription="@string/medicine_name_desc"
                    />
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicineName"
                    android:inputType="textAutoComplete"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/medicineDosage"
                    android:text="@string/dosage"
                    android:id="@+id/medicineDosageLabel"
                    android:contentDescription="@string/medicine_dosage_desc"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicineDosage"
                    android:inputType="text"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/medicineDescription"
                    android:text="@string/description"
                    android:id="@+id/medicineDescriptionLabel"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicineDescription"
                    android:inputType="text"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicineSaveButton"
                    android:text="@string/save"
                    android:onClick="handleSave"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/action_card_icon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_card"
            android:translationY="60sp"
            >
            <br.usp.icmc.healthpal.healthpal.components.IconTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/fa_capsules"
                android:textColor="@color/colorText"
                android:textSize="48sp"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="5sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_action_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_create_medicine"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="23sp"
            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="@id/action_card"
            android:translationY="25dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>