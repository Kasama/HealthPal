<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorActionBackground"
        android:paddingTop="75sp"
        android:paddingBottom="25sp"
        >
        <LinearLayout
            android:id="@+id/tv_feeling_well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/tv_feeling_ok"
            >
            <TextView
                android:id="@+id/tv_feeling_well_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_smile"
                android:textAlignment="center"
                android:textSize="75dp"
                android:textColor="#2196F3"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_margin="20sp"
                />
            <TextView
                android:id="@+id/tv_feeling_well_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEM"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#757575"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_feeling_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/action_card"
            app:layout_constraintRight_toRightOf="@id/action_card"
            >
            <TextView
                android:id="@+id/tv_feeling_ok_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_meh"
                android:textAlignment="center"
                android:textSize="75dp"
                android:textColor="#E91E63"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_margin="20sp"
                />
            <TextView
                android:id="@+id/tv_feeling_ok_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#757575"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_feeling_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/tv_feeling_ok"
            >
            <TextView
                android:id="@+id/tv_feeling_bad_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_meh"
                android:textAlignment="center"
                android:textSize="75dp"
                android:textColor="#F44336"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_margin="20sp"
                />
            <TextView
                android:id="@+id/tv_feeling_bad_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAL"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#757575"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/action_card_icon_container"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/action_card"
        android:translationY="60sp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/fa_notes_medical"
            android:textColor="@color/colorText"
            android:textSize="48sp"
            android:fontFamily="@font/font_awesome_solid"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="5sp"
            />
    </LinearLayout>
    <!--Modificar tÃ­tulo do card em TEXT aqui-->
    <TextView
        android:id="@+id/tv_action_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_alarm_post"
        android:textAlignment="center"
        android:textColor="@color/colorTitle"
        android:textSize="23sp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="@id/action_card"
        android:translationY="25dp"/>
</android.support.constraint.ConstraintLayout>
