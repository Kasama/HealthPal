<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/pills"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/dim_frame"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/action_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorActionBackground"
            android:paddingTop="75sp"
            android:paddingBottom="25sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            >
            <LinearLayout
                android:id="@+id/form_medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".AddMedicineActivity"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/form_medicine_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/form_medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColor="@color/colorText"
                        android:inputType="textAutoComplete"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/form_medicine_dosage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_medicine_dosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dosage"
                        android:inputType="text"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/form_medicine_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_medicine_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description"
                        android:inputType="text"
                        />
                </android.support.design.widget.TextInputLayout>
                <!--Date and Time pickers-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/form_medicine_button_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATA INICIAL"
                        android:layout_gravity="center"
                        />
                    <Button
                        android:id="@+id/form_medicine_button_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HORÃRIO INICIAL"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <br.usp.icmc.healthpal.healthpal.components.ButtonCard
                    android:id="@+id/form_medicine_button_add"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:textColor="@color/colorCardText"
                    app:iconText="@string/fa_plus_circle"
                    app:labelText="ADICIONAR"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/action_card_icon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_card"
            android:translationY="60sp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/fa_capsules"
                android:textColor="@color/colorText"
                android:textSize="48sp"
                android:fontFamily="@font/font_awesome_solid"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="5sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_action_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_create_medicine"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="23sp"
            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="@id/action_card"
            android:translationY="25dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>