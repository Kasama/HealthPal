<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorActionBackground"
        android:paddingTop="75sp"
        android:paddingBottom="25sp"
        >
        <!--Inserir conteúdo aqui-->
        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amoxilina, 5mg"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="#424242"
            android:layout_margin="20sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_medicine_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 (uma) cápsula"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#424242"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            app:layout_constraintTop_toBottomOf="@id/tv_medicine_name"
            />
        <br.usp.icmc.healthpal.healthpal.components.ButtonCard
            android:id="@+id/button_medicine_taken"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:textColor="@color/colorCardText"
            app:background="@drawable/comment"
            app:labelText="@string/button_medicine_taken"
            app:layout_constraintTop_toBottomOf="@id/tv_medicine_dosage"
            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/action_card_icon_container"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/action_card"
        android:translationY="60sp"
        >
        <!--Modificar ícone em TEXT aqui-->
        <TextView
            android:id="@+id/action_card_icon"
            android:layout_height="58sp"
            android:layout_width="58sp"
            android:background="@drawable/fa_alarm_clock"
            android:textColor="@color/colorText"
            />
    </LinearLayout>
    <!--Modificar título do card em TEXT aqui-->
    <TextView
        android:id="@+id/tv_action_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_alarm_raise"
        android:textAlignment="center"
        android:textColor="@color/colorTitle"
        android:textSize="23sp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="@id/action_card"
        android:translationY="25dp"/>
</android.support.constraint.ConstraintLayout>
