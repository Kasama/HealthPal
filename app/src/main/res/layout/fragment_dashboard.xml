<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title_dashboard"
        android:text="@string/title_dashboard"
        android:textColor="@color/colorTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        />

    <br.usp.icmc.healthpal.healthpal.components.DashboardCard
        android:id="@+id/dashicon"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:textColor="@color/colorCardText"
        app:iconText="@string/fa_clock"
        app:labelTitle="Próxima Medicação"
        app:labelText="Amoxicilina, 5mg"
        app:labelFooter="12:10"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dashboard"
        />

    <br.usp.icmc.healthpal.healthpal.components.ButtonCard
        android:id="@+id/card_add_button"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:textColor="@color/colorCardText"
        app:iconText="@string/fa_plus_circle"
        app:labelText="ADICIONAR"
        app:layout_constraintTop_toBottomOf="@id/dashicon"
        />
</android.support.constraint.ConstraintLayout>