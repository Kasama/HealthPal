<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/button_card_layout"
    android:background="@drawable/layout_card"
    android:padding="5dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <br.usp.icmc.healthpal.healthpal.components.IconTextView
            android:id="@+id/button_card_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_eye"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="26sp"
            android:textColor="@color/colorCardText"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/button_card_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/card_default_title"
            android:textAlignment="center"
            android:textColor="@color/colorCardText"
            android:textSize="22sp"
            android:gravity="center_vertical" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
