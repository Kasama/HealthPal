<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_dashboard_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
    >
        <br.usp.icmc.healthpal.healthpal.components.IconTextView
            android:id="@+id/fa_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_clock"
            android:layout_gravity="center_vertical"
            android:layout_margin="20sp"
            android:textSize="32sp"
        />
        <LinearLayout
            android:id="@+id/layout_dashboard_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:textSize="20sp"
        >
            <TextView
                android:id="@+id/tv_dashboard_next_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próxima Medicação"
            />
            <TextView
                android:id="@+id/tv_next_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Dipiroca solida, 5mg"
            />
            <TextView
                android:id="@+id/tv_next_medicine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="12:00"
            />
        </LinearLayout>
    </LinearLayout>

    <br.usp.icmc.healthpal.healthpal.components.DashboardCard
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:bgColor="@color/colorAccent"
        app:iconText="@string/fa_eye"
        app:labelText="Testezin"
        app:layout_constraintTop_toBottomOf="@id/layout_dashboard_next"
        app:layout_constraintBottom_toBottomOf="parent"
    />



</android.support.constraint.ConstraintLayout>