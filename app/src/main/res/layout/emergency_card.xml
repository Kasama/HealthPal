<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/emergency_card_layout"
    android:background="@drawable/layout_card"
    android:padding="5dp">

    <br.usp.icmc.healthpal.healthpal.components.IconTextView
        android:id="@+id/emergency_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35sp"
        android:textColor="@color/colorCardText"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/emergency_card_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/card_default_footer"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorCardText"
        />
</LinearLayout>
